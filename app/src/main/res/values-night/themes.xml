<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InfiniteScroll" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="background">
        <item name="android:background">@color/green_dark</item>
    </style>

    <style name="card_background">
        <item name="android:background">@color/green_dark</item>
    </style>

    <style name="card_background.detail">
        <item name="android:background">@color/green_light</item>
    </style>

    <style name="default_tint">
        <item name="tint">@color/green_light</item>
    </style>

    <style name="body" parent="Theme.InfiniteScroll">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/green_light</item>
    </style>

    <style name="character_name_title_01" parent="body">
        <item name="android:textSize">@dimen/card_title</item>
    </style>

    <style name="character_name_title_02" parent="body">
        <item name="android:textSize">@dimen/card_title</item>
        <item name="android:textColor">@color/green_dark</item>
    </style>

    <style name="subtitle_01" parent="body">
        <item name="android:textSize">@dimen/subtitle.small</item>
    </style>

    <style name="subtitle_02" parent="body">
        <item name="android:textSize">@dimen/subtitle.normal</item>
        <item name="android:textColor">@color/green_dark</item>
    </style>

    <style name="subtitle_03" parent="subtitle_02">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>